<% layout('./layouts/boilerplate') %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h3>Create new Listing</h3>
                <form action="/listings/new" method="post" novalidate class="needs-validation" onsubmit="return validateForm()">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="title" id="title" placeholder="Enter Title" class="form-control"
                            required>
                        <!-- <div class="valid-feedback">  for the valid feedback

                        </div> -->
                        <div class="invalid-feedback">
                            Please enter valid title
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="description" id="description" class="form-control" placeholder=""
                            required></textarea>
                        <div class="valid-feedback">Good valid-feedback</div>
                        <div class="invalid-feedback">
                            Please enter valid feedback
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="imgLink" class="form-label">Enter Image link</label>
                        <input type="text" name="imgLink" class="form-control" id="imgLink"
                            placeholder="https://www.example.com/path/to/your-image.jpg" required>
                        <div class="invalid-feedback">
                            Please enter valid image link
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="location" id="location" class="form-control" placeholder="Pune, India"
                            required>
                        <div class="invalid-feedback">
                            Please enter valid image location
                        </div>
                    </div>
                    <div class="row">
                        <!-- Note(col-4) : It will take four coulmns -->
                        <div class="mb-3 col-md-4">
                            <!-- col-md-4 : If the screen size is medium or larger, the element will take up 4 columns. -->
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="price" class="form-control" id="price" placeholder="12000"
                                required>
                        </div>

                        <div class="mb-3 col-md-8">
                            <!-- col-md-8 : If the screen size is medium or larger, the element will take up 8 columns. -->
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="country" class="form-control" id="country" placeholder="India"
                                required>
                        </div>
                    </div>
                    <br>
                    <input class="btn btn-dark col-2" id="add-btn" type="submit" value="Add">
                    <br><br> <br> <br>
                </form>
                <script src="/js/script.js"></script>
                <script>
                    function validateForm() {
                        // Add your custom validation logic here
                        // Example:
                        var title = document.getElementById('title').value;
                        var description = document.getElementById('description').value;
                        var imgLink = document.getElementById('imgLink').value;
                        var location = document.getElementById('location').value;
                        var price = document.getElementById('price').value;
                        var country = document.getElementById('country').value;

                        if (!title || !description || !imgLink || !location || !price || !country) {
                            alert('Please fill out all fields.');
                            return false;
                        }
                        // Add more validation as needed
                        return true; // Return true if validation passes
                    }
                </script>
            </div>
        </div>
    </body>